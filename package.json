{
  "name": "typescript-boilerplate",
  "version": "0.1.0",
  "description": "A starting point for node.js & TypeScript application",
  "main": "index.js",
  "scripts": {
    "start": "   node    lib/index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "      rm -rf lib/* && tsc",
    "build:watch": "rm -rf lib/* && tsc --watch",
    "test": "         npm run build && jest --forceExit",
    "test:coverage": "npm run build && jest --forceExit --coverage",
    "test:codecov-upload": "codecov -f coverage/*.json",
    "test:watch": "   npm run build && jest --forceExit --watch",
    "tslint": "    tslint -c tslint.json       'lib-ts/**/*.ts?(x)'",
    "tslint:fix": "tslint -c tslint.json --fix 'lib-ts/**/*.ts?(x)'",
    "dev-server": "    webpack-dev-server --config webpack/dev.js  --hot ",
    "webpack": "       webpack            --config webpack/dev.js        ",
    "webpack:watch": " webpack  --watch   --config webpack/dev.js        ",
    "webpack:prod": "  webpack            --config webpack/prod.js       ",
    "electron":       "electron dev",
    "electron:prod":  "electron prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/typescript-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "webpack",
    "TypeScript",
    "boilerplate"
  ],
  "author": "Wang Guan <momocraft@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/jokester/typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "homepage": "https://github.com/jokester/typescript-boilerplate#readme",
  "dependencies": {
    "corejs": "^1.0.0",
    "electron": "^1.7.9",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.27",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "babel-minify-webpack-plugin": "0.2.0",
    "chai": "^4.1.2",
    "codecov": "^2.3.1",
    "jest": "^21.0.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "ts-jest": "^21.0.0",
    "ts-loader": "^3.0.3",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "roots": [
      "lib-ts",
      "lib"
    ],
    "testMatch": [
      "/**/__test__/*.(ts|js|tsx|jsx)",
      "/**/*\\.(spec|test)\\.(ts|js|tsx|jsx)"
    ],
    "collectCoverageFrom": [
      "lib-ts/**/*.(ts|tsx)",
      "!lib/",
      "!**/node_modules",
      "!/coverage"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "mapCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ]
  }
}
