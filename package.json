{
  "name": "typescript-boilerplate",
  "version": "0.1.0",
  "description": "A starting point for node.js & TypeScript application",
  "main": "index.js",
  "scripts": {
    "start": "node lib/index.js",
    "start:ts": "ts-node lib-ts/index.ts",
    "build": "rm -rf lib/* && tsc",
    "build:watch": "rm -rf lib/* && tsc --watch",
    "test": "npm run build && jest",
    "test:coverage": "npm run build && jest --coverage",
    "test:watch": "npm run build && jest --watch",
    "tslint": "tslint -c tslint.json ts-lib/**/*.ts",
    "webpack": "webpack --config webpack/browser-dev.js",
    "webpack:watch": "webpack --watch --config webpack/browser-dev.js",
    "webpack:prod": "webpack --config webpack/browser-prod.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jokester/typescript-boilerplate.git"
  },
  "keywords": [
    "nodejs",
    "webpack",
    "TypeScript",
    "boilerplate"
  ],
  "author": "Wang Guan <momocraft@gmail.com>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/jokester/typescript-boilerplate/issues"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "homepage": "https://github.com/jokester/typescript-boilerplate#readme",
  "dependencies": {
    "tslib": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/jest": "^19.2.2",
    "@types/node": "^6.0.60",
    "@types/react": "^15.0.16",
    "@types/react-dom": "^0.14.23",
    "babili-webpack-plugin": "0.0.11",
    "chai": "^3.5.0",
    "jest": "^19.0.2",
    "ts-jest": "^19.0.7",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "typescript": "^2.2.1",
    "webpack": "^2.2.1",
    "ts-loader": "^2.0.0",
    "webpack-merge": "^2.6.1",
    "webpack-visualizer-plugin": "^0.1.10"
  },
  "jest": {
    "transform": { ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js" },
    "roots": [ "lib-ts", "lib" ],
    "testMatch": [
        "/**/__test__/*.(ts|js|tsx|jsx)", "\\.(spec|test)\\.(ts|js|tsx|jsx)$"
    ],
    "moduleFileExtensions": [ "ts", "tsx", "js" ],
    "coverageReporters": ["json", "lcov", "text", "html"]
  }
}
